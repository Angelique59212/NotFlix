{% extends 'base.html.twig' %}

{% block title %}FILMS{% endblock %}

{% block body %}
    <div class="flex items-center justify-between">
        <h1 class="ml-4 p-4 text-8xl text-amber-50 font-bold">Notflix</h1>
        <a class="mr-4 text-3xl text-amber-50" href="{{ path('app_home') }}">Accueil</a>
    </div>
    <h1 class="p-4 text-4xl text-amber-50 font-bold text-center">Bande Annonce</h1>
    <p class="font-bold text-6xl text-amber-50 my-4 text-center">{{ movie.title }}</p>
