{% extends 'base.html.twig' %}

{% block title %}New Movie{% endblock %}

{% block body %}
    <h1>Ajouter une vidéo</h1>
    {{ form_start(form) }}
    {{ form_row(form.title) }}
    {{ form_row(form.description) }}
    {{ form_row(form.link) }}
    <button type="submit">Ajouter la vidéo</button>
    {{ form_end(form) }}

    <a href="{{ path('app_movie_index') }}">back to list</a>
{% endblock %}
