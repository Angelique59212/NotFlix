{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="flex items-center justify-between">
        <h1 class="ml-4 p-4 text-8xl text-amber-50 font-bold">Notflix</h1>
        <a class="mr-4 text-3xl text-amber-50" href="{{ path('app_home') }}">Accueil</a>
    </div>
    <h1 class="p-4 text-4xl text-amber-50 font-bold text-center">S'enregistrer</h1>
    <img class="m-auto w-80 p-2" src="{{ asset('build/img/img.avif') }}" alt="">

    <div class="bg-form-gradient w-1/2 m-auto text-center p-11 text-amber-50 flex flex-col rounded-md">
        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}

        <div class="mb-4 flex flex-row items-center">
            {{ form_label(registrationForm.email, null, {
                'label_attr': {
                    'class': 'w-1/2'
                }}) }}
            {{ form_widget(registrationForm.email, {
                'attr': {
                    'class': 'text-black w-1/2 m-auto rounded-sm'
                }
            }) }}
        </div>

        <div class="mb-4 flex flex-row items-center">
            {{ form_label(registrationForm.plainPassword, 'Mot de passe', {
                'label_attr': {
                    'class': 'w-1/2'
                }}) }}
            {{ form_widget(registrationForm.plainPassword, {
                'attr': {
                    'class': 'text-black w-1/2 m-auto rounded-sm'
                }}) }}
        </div>
        <div class="mb-4 flex flex-row items-center">
            {{ form_label(registrationForm.subscription, 'Abonnement', {
                'label_attr': {
                    'class': 'w-1/2'
                }}) }}
            {{ form_widget(registrationForm.subscription, {
                'attr': {
                    'class': 'text-black w-1/2 m-auto rounded-sm'
                }}) }}
        </div>

        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="
            w-1/2
            text-white
            bg-gradient-to-br from-green-400 to-blue-600
            hover:bg-gradient-to-bl
            focus:ring-4
            focus:outline-none
            focus:ring-green-200
            dark:focus:ring-green-800
            font-medium rounded-lg
            text-sm
            py-2.5
            text-center
            m-auto
            my-2
        ">S'enregistrer</button>

        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
